
<div class="signup-wrapper">
  <h1>新規登録</h1>
  <div class="form-wrapper">
    <%= form_tag("/signup/send") do %>
    <table class="signup-form-table">
      <thead>
      </thead>
      <tbody>

        <tr>
          <td class="signup-content-name">氏名</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td><input  class="form-input-signup" type="" placeholder="スペースなしで氏名を入力" name="name" value="<%= @user.name %>"></td>
        </tr>
        <tr>
          <td class="signup-content-name">Email</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td><input placeholder="Emailアドレスを入力してください" class="form-input-signup" type="" name="email" value="<%= @user.email %>"></td>
        </tr>
        <tr>
          <td class="signup-content-name">電話番号</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td><input  class="form-input-signup" placeholder="ハイフンなし11桁" type="" name="tel" value="<%= @user.tel %>"></td>
        </tr>
        <tr>
          <td class="signup-content-name">入会年度</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td>
          <% year = Date.today.year %>
            <input  class="form-input-signup" type="" name="year" value="<%= @user.year %>" placeholder="SCSに入会した年度(リストから選択)" list="yearList" >
            <datalist id="yearList">
              <option value="<%= year - 3 %>"></option>
              <option value="<%= year - 2 %>"></option>
              <option value="<%= year - 1 %>"></option>
              <option value="<%= year - 0 %>"></option>
            </datalist>

          </td>
        </tr>
        <tr>
          <td class="signup-content-name">大学名</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td><input  class="form-input-signup" type="" name="univ" value="<%= @user.univ %>" placeholder="例)早稲田大学"></td>
        </tr>

        <tr>
          <td class="signup-content-name">パスワード</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td><input  class="form-input-signup" type="password" name="password" placeholder="6文字以上で指定してください" s></td>
        </tr>
        <tr>
          <td class="signup-content-name">パスワード(再入力)</td>
          <td class="required-question">
            <div class="required-box">必須</div>
          </td>
          <td><input  class="form-input-signup" type="password" name=""></td>
        </tr>

      </tbody>
    </table>
    <% @errors.each do |message|%>
      <%= message %>
    <% end %>
    <input type="submit" class="send-btn" value="送信">
    <% end %>

  </div>
</div>
