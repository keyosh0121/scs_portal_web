<div class="roomreg-wrap">
  <div class="sub">部屋登録画面</div>
  <div class="date"><%= @date.strftime("%Y年%m月%d日(#{%w(日 月 火 水 木 金 土)[@date.wday]})") %>
  </div>
	<%= form_tag('/database/microom/register/send') do %>
  <table>
    <thead>
      <tr>
        <th>時限</th>
        <th>使用する部屋</th>
      </tr>
    </thead>
    <tbody>
      <% @mics.order(:period_id).map(&:period).uniq.each do |period|%>
      <tr>
        <td class="period"><%= period.name %></td>
        <td><% @mics.where(period:period).each_with_index do |mic|%>
            <span><%= mic.band.name %></span><br>
          <% end %>
          <select name="<%= period.id %>"><option selected>選択してください</option>
          <% Room.where(room_type:2).each do |room| %>
          <option value="<%= room.id %>"><%=room.name%></option>
          <% end %>
        </select></td>
        </tr>
      <% end %>
    </tbody>
  </table>
	<input type="hidden" name="date" value="<%= @date %>">
  <%= submit_tag '部屋を登録', :data => { :confirm => '部屋に間違いはないですか？' } %>
	<% end %>
</div>
