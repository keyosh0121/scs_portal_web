<div class="room-inner">
  <%= form_tag('/database/mic/room-register/weekly/send') do%>
  <h2><%= (Date.today - Date.today.wday).strftime("%m月%d日") %>〜<%= (Date.today + (7 - Date.today.wday)).strftime("%m月%d日") %> 週の予約部屋を登録</h2>
  <div class="room-list">
    <p>現在の部屋予約状況</p><br>
    <% MicRoom.all.each do |microom|%>
      <%= "#{microom.date.strftime("%m月%d日")} #{microom.time}限 #{microom.room} (#{microom.reservation_type}) " %><br>
    <% end %>
  </div>
  <p>日時入力欄</p>
  <select name="date">
    <option value="" disabled selected>選択して下さい</option>
    <% this_monday = Date.today - Date.today.wday %>
    <% 7.times do |num|%>
      <option value="<%= this_monday + num %>"><%= (this_monday + num).strftime("%m月%d日") %></option>
      option
    <% end %>
  </select>
  <p>時限</p>
  <select name="time">
    <option value="" disabled selected>選択して下さい</option>
    <% @hours.each do |hour|%>
      <option value="<%=hour%>">
        <%= if hour == 8
              "昼"
            else
              hour.to_s + "限"
            end
        %>
      </option>
    <% end %>
  </select>
  <p>部屋入力欄</p>
  <select name="room">
    <option value="" disabled selected>選択して下さい</option>
    <% @rooms.each do |room|%>
      <option value="<%= room %>"><%= room %></option>
    <% end %>
  </select>
  <input type="submit" name="">
  <% end %>
</div>
