<div class="mic-admin-wrapper">
  <div class="mic-title">
    <div class="mic-title-box">
      <h1>マイク練管理</h1>
    </div>
  </div>


  <div class="mic-main-wrapper">
	<% if @mics.any? %>
      <div class="mic-date"><%= @mics[0].date %></div>
      <div class="mic-time"><%= @mics[0].time %></div>
        <% i=0 %>
        <% dummy_date=@mics[i].date %>
        <% dummy_time=@mics[i].time %>
        <% j = @mics.count - 1 %>
        <% until i > j do %>
         <% if @mics[i].date == dummy_date %>
           <% if @mics[i].time == dummy_time %>
					 <div class="mic-content">
              <div class="mic-band"><%= @mics[i].band %></div>
              <div class="approve-button"><select name="status">
            <option value="approve">承認</option>
            <option value="approve">拒否</option>
          </select><input type="submit" name="" value="変更"></div>
					</div>
              <% i+=1 %>
           <% else %>
              <% dummy_time=@mics[i].time %>
              <div class="mic-time"><%= @mics[i].time %></div>
           <% end %>

          <% else %>
          <% dummy_date=@mics[i].date%>
          <div class="mic-date"><%= @mics[i].date %></div>
          <% end %>

        <% end %>
		<% end %>
  </div>




</div>
