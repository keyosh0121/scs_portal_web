<div class="reg-band-sub-wrapper">
<h1>正規バンド申請</h1>

  <div class="reg-band-sub-form">
    <div class="error-reg">
      <% @band.errors.full_messages do |message| %>
        <%= message %><br>
      <% end %>
    </div>
    <%= link_to('企画バンドの申請はこちら','/submit/temporal-band',{:class => "to-temporal-btn"})%>
    <%= form_tag("/submit/regular-band/send",{multipart: true}) do %>
     <div class="reg-form">
       <div class="reg-form-content">バンド名</div>
       <input type="text" name="name" placeholder="バンド名を入力して下さい" value=<%=@band.name%>>
       <div class="reg-form-content">PA・メンバー</div>
       <div class="reg-form-content-small">PA<span class="reg-caution"> ※必須</span></div>
       <input class="reg-member-input" type="text" name="pa" placeholder="氏名を入力して下さい" list="nameList" value=<%=@pa%>>
        <datalist id="nameList">
          <% @names.each do |name|%>
            <option value="<%= name %>"><%= name %></option>
          <% end %>
        </datalist>
       <div>該当するマイク番号にメンバーの氏名を入力してください</div>
       <% 8.times do |i|%>
        <div class="reg-form-content-small">マイク番号<%= i + 1 %><span class="reg-caution"><%= "※必須" if i <= 2 %></span></div>
        <div class="reg-member-registration-<%= i + 1%> reg-member-registration"></div>
        <input class="reg-member-input <%= i + 1%>" type="text" name="member<%= i + 1 %>" placeholder="氏名を入力して下さい" list="nameList" value=<%=@mem[i]%>>
        <datalist id="nameList">
          <% @names.each do |name|%>
            <option value="<%= name %>"><%= name %></option>
          <% end %>
        </datalist>
       <% end %>
       <div class="reg-form-content-small">バンマス氏名<span class="reg-caution"> ※必須</span></div>
       <input type="text" name="master" placeholder="氏名を入力して下さい" value=<%=@master%>>
       <div class="reg-form-content">バンド情報</div>
       <div class="reg-form-content-small">結成年<span class="reg-caution"> ※必須</span></div>
       <select name="year" class="year-selector">
        <option value="" disabled selected>選択して下さい</option>
         <option value="<%=Date.today.year-3%>"><%=Date.today.year-3%></option>
         <option value="<%=Date.today.year-2%>"><%=Date.today.year-2%></option>
         <option value="<%=Date.today.year-1%>"><%=Date.today.year-1%></option>
         <option value="<%=Date.today.year%>"><%=Date.today.year%></option>
       </select>
      <div class="reg-form-content-small">website</div>
      <input type="text" name="website" placeholder="">
      <div class="reg-form-content-small">バンドの特徴<span class="reg-caution"> ※必須</span></div>
      <input type="text" name="feature" placeholder="例：陽気なJazzを歌うバンド">
       <div class="reg-form-content-small">バンドの説明<span class="reg-caution"> ※必須</span></div>
       <textarea name="description"><%=@band.description%></textarea>
       <div class="reg-form-content-small">バンド写真</div>
       <input type="file" name="image">
       <input type="submit" name="" value="正規バンドを申請" class="reg-submit">
     </div>
    <% end %>
  </div>
</div>

