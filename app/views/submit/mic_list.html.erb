
<div class="mic-list-wrap">
  <div class="mic-list-inner">
    <div class="mic-sub-side">
      <p class="display-small-title">マイク練申請画面</p>
      <div class="mic-sub-side-title">マイク練申請</div>
      <div class="mic-sub-side-category">メニュー</div>
      <div class="mic-sub-side-content"><a href="/submit/mic">申請</a></div>
      <div class="mic-sub-side-content"><%= link_to "申請済みリスト", :controller => "submit", :action => "mic_list" %></div>
      <div class="mic-sub-side-content">管理</div>
    </div>
    <div class="mic-sub-main mic-main2">
      <h1>マイク練申請済みリスト</h1>
      <% @mics.each do |mic| %>
      <div class="mic-list-contents">
        <div class="mic-list-content mic-list-content-title"><%= mic.band.name %></div>
        <div class="mic-list-content mic-list-content-date"><%= mic.date %></div>
        <div class="mic-list-content mic-list-content-time"><%= mic.period.name %></div>
        <div class="mic-list-content mic-list-content-status"><%= mic.status_string %></div>
        <div class="mic-list-content mic-list-content-cancel"><%= link_to('申請取消','/submit/mic/destroy/' + mic.id.to_s , {:method => 'post', data: {confirm: "本当に取り消しますか？"}})%></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
